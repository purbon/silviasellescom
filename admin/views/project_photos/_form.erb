<% error = @project_photo.errors.key?(:title) && @project_photo.errors[:title].count > 0 %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :title, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :title, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:title) : "Ex: a simple text" %></span>
  </div>
</fieldset>

<% error = @project_photo.errors.key?(:alt) && @project_photo.errors[:alt].count > 0 %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :alt, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :alt, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:alt) : "Ex: a simple text" %></span>
  </div>
</fieldset>

<% error = @project_photo.errors.key?(:frontpage) && @project_photo.errors[:frontpage].count > 0 %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :frontpage, :class => 'control-label' %>
  <div class='controls'>
   <%= f.check_box :frontpage, :class => 'form-control', :value => 'True' %>
   <span class='help-inline'><%= error ? f.error_message_on(:frontpage) : "Ex: true or false" %></span>
  </div>
</fieldset>

<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :file, :class => 'control-label' %>
  <input id="fileupload" class="form-control" type="file" name="files[]" data-url="images/upload" multiple>
</fieldset>

<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:project_photos, :index), :class => 'btn btn-default' %>
</div>
