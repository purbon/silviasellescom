<h1><%= t('contact') %> <small>(<%= t('me') %>)</small></h1>

<% form_tag '/contactme', :class => 'centered', :method => 'post', 'data-abide' => '' do %>
  <div class="row">
    <div class="large-12 columns">
      <div class="small-9 columns">
        <label><%= t('from') %>:
          <%= text_field_tag :from, :maxlength => 40, :placeholder => "Your name", :required => true %>
        </label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <div class="small-9 columns">
        <label><%= t('email') %>:
          <%= text_field_tag :email, :maxlength => 100, :placeholder => "Your email", :required => true %>
        </label>
      </div>
    </div>
  </div>
   <div class="row">
    <div class="large-12 columns">
      <div class="small-9 columns">
        <label><%= t('message') %>:
        <%= text_area_tag :message, :placeholder => "..." %>
      </label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-9 columns">
       <button type="submit"><%= t('send') %></button>
    </div>
  </div>
<% end %>
