<h1>Silvia Selles <small>(<%= t('projects.me') %>)</small></h1>

<div class="row">
  <div class="small-12 large-12 columns">
    <p><%= t('projects.intro') %></p>
  </div>

  <div class="small-block-grid-3 medium-block-grid-3 large-block-grid-3">
    <% @photos.each do |photo| %>
      <li>
        <div class="small-12 large-12 columns">
          <%= image_tag photo[:location], :alt => photo[:alt] %>
        </div>
        <div class="small-12 large-12 columns">
          <p> <%= photo[:comment] %> </p>
        </div>
      </li>
    <% end %>
    </div>
</div>
