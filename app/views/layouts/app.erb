<html>
  <head>
    <title> SilviaSelles.com </title>
    <%= stylesheet_link_tag    :application %>
    <%= javascript_include_tag :modernizr %>

    <%= javascript_include_tag :jquery, :fastclick %>
    <%= javascript_include_tag 'js/foundation.js' %>
    <script> $(document).foundation(); </script>
  </head>
  <body>
    <div id="header">
      <div class="row">
        <div class="small-12 small-centered columns">
          <h1> Silvia Selles </h1>
        </div>
      </div>
    </div>
    <div class="contain-to-grid">
      <nav class="top-bar" data-topbar data-options="">
        <section class="top-bar-section">
          <ul class="left">
            <li class=""><%= link_with_locale "/", "/" %></li>
            <li class=""><%= link_with_locale "Projects", "/projects" %></li>
            <li class=""><%= link_with_locale "AboutMe", "/about" %></li>
          </ul>
           <ul class="right">
             <li class=""><a href="?locale=en#"><%= image_tag 'England.png'%></a></li>
             <li class=""><a href="?locale=de#"><%= image_tag 'Germany.png'%></a></li>
          </ul>
        </section>
      </nav>
    </div>
    <div id="body">
      <%= yield %>
      <section class="credits">
          <%= Time.now.year %> Silvia Selles
      </section>
    </div>
  </body>
</html>
